source 'https://rubygems.org'
ruby "2.0.0"

gem 'rails'
gem 'bootstrap-sass'
gem 'font-awesome-sass-rails'
gem 'bootstrap-x-editable-rails'
#gem 'bootbox-rails'
gem 'bcrypt-ruby'
gem 'jquery-rails'
gem 'pg'
group :development, :test do
  gem 'sqlite3'
  gem 'spork'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

group :test do
  gem 'rb-inotify'
  gem 'libnotify'
  gem 'guard-spork'
  gem 'spork'
end

group :production do
  gem 'pg'
  gem 'rails_12factor'
end
